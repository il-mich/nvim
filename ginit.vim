" syntax highlight
syntax enable

" colorscheme
colorscheme night-owl

" remove tildes from EndOfBuffer area
highlight EndOfBuffer guifg=#011627

" set tab bar colors
highlight TabLine     guibg=#011627 guifg=#637777
highlight TabLineFill guibg=#011627 guifg=#011627
highlight TabLineSel  guibg=#637777 guifg=#011627

" font for the GUI
set guifont=JetBrainsMono\ Nerd\ Font:h11

